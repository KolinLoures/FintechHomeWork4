<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kolin.fintechhomework.CommonActivity">

    <TextView
        android:id="@+id/common_activity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/common_activity_button_start"
            android:layout_width="0dp"
            android:background="@drawable/button_selector"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="0.8"
            android:text="load" />

        <ProgressBar
            android:id="@+id/common_activity_progress_view"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/common_activity_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
